<Window x:Class="File_explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:File_explorer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <UniformGrid Columns="2">
        <UniformGrid Columns="2">
            <Label Content="Tip fajla:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Name="tip"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Content="Ruta:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Name="rta"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Content="Velicina" Name="DIF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Name="vel"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </UniformGrid>
        <ScrollViewer>
            <TreeView Name="TreeV" SelectedItemChanged="TreeV_SelectedItemChanged"/>
        </ScrollViewer>
    </UniformGrid>

    
    
</Window>
